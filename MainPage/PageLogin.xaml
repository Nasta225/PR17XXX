<Page x:Class="PR_17.MainPage.PageLogin"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PR_17.MainPage"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageLogin">

    <Grid>
        <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Label Content="Введите логин" Style="{StaticResource label1}"/>
            <TextBox Text="" Style="{StaticResource TextBox}"/>
            <Label Content="Введите пароль" Style="{StaticResource label1}"/>
            <TextBox Text="" Style="{StaticResource TextBox}"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="btnIn" Content="Войти" Style="{StaticResource ButtonG}" Click="btnIn_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
