<Window x:Class="PR_17.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PR_17"
        mc:Ignorable="d"
        Title="MainWindow" MinHeight="500" MinWidth="900" Icon="/image/Зебра.PNG">
    <Grid Background="#2b96d1">
        <Grid.RowDefinitions>
            <RowDefinition Height="70*"/>
            <RowDefinition Height="350*"/>
            <RowDefinition Height="30*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Background="#e3217b">
            <Image Source="/image/Зебра.PNG" Width="108" Height="100"/>
            <TextBlock Text="КАФЕ МАРМЕЛАДНАЯ ЗЕБРА" Style="{StaticResource Title}" TextAlignment="Center"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Background="#e3217b">

        </StackPanel>

        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden" Grid.Row="1"/>
    </Grid>
</Window>
